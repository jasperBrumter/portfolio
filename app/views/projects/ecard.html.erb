
<%= stylesheet_link_tag "ecard" %>

<div class="ecardback">
	<div class="ecardtop">

	</div>
	<div class="ecardnav">
		<div class="navoption nav1">
			<p class="active">GENERAL INFO</p>
		</div>
		<div class="navoption nav2">
			<p>SKILLS</p>
		</div>
		<div class="navoption nav3">
			<p>HOBBIES</p>
		</div>
		<div class="navoption nav4">
			<p>DISTINCTIONS</p>
		</div>
	</div>
	<div class="ecardcontents ecardcontent1">
		content 1
	</div>
	<div class="ecardcontents ecardcontent2 hidden">
		content 2
	</div>
	<div class="ecardcontents ecardcontent3 hidden">
		content 3
	</div>
	<div class="ecardcontents ecardcontent4 hidden">
		content 4
	</div>
</div>


<script>
	const navoptions = document.querySelectorAll(".navoption");
	const navcontent = document.querySelectorAll(".ecardcontents");

	const clearAll = () => document.querySelector(".ecardnav").getElementsByClassName("active")[0].classList.remove("active")
	const hideAll = () => navcontent.forEach((tab) => {
		tab.classList.add("hidden");
	})
	const showTab = (classes) => {
		const string = `ecardcontent${classes[1][3]}`
		document.querySelector(".ecardback").getElementsByClassName(string)[0].classList.remove("hidden");
	}
	

	navoptions.forEach((option) => {
		option.addEventListener("click", () => {
			clearAll();
			option.getElementsByTagName("p")[0].classList.add("active");
			hideAll();
			showTab(option.classList)
		})
	})
	document.querySelector(".nav1").addEventListener("click", () => {

	})
</script>
